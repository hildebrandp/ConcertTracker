    "@types/node": "^25.0.9",
    "@types/swagger-ui-express": "^4.1.8",
    "json-schema-to-typescript": "^15.0.4",
    "nodemon": "^3.1.11",
    "openapi-typescript": "^7.10.1",
    "ts-node": "^1.7.1",
    "typescript": "^5.9.3"
  },
