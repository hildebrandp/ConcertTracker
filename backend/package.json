{
  "name": "concerttracker_backend",
  "version": "1.0.0",
  "description": "Track visited concerts",
  "main": "dist/index.js",
  "scripts": {
    "tsc": "tsc",
    "test": "jest --verbose",
    "dev": "nodemon src/index.ts",
